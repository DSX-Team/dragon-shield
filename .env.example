# Dragon Shield IPTV System - Environment Configuration
# Copy this file to .env and configure your settings

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=production
APP_NAME="Dragon Shield IPTV"
APP_URL=http://localhost:3000
FRONTEND_PORT=3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dragon_shield
DB_USER=postgres
DB_PASSWORD=dragon_shield_pass
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ==============================================
# SUPABASE CONFIGURATION (Optional)
# ==============================================
# If using Supabase instead of local PostgreSQL
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_change_this_in_production
BCRYPT_ROUNDS=12

# Admin credentials (change immediately)
ADMIN_EMAIL=admin@dragonshield.local
ADMIN_PASSWORD=change_this_password_now
ADMIN_USERNAME=admin

# ==============================================
# STREAMING CONFIGURATION
# ==============================================
# Maximum concurrent streams per user
MAX_CONCURRENT_STREAMS=3
# Default transcoding settings
DEFAULT_VIDEO_QUALITY=720p
DEFAULT_AUDIO_BITRATE=128k
# Buffer settings (in seconds)
STREAM_BUFFER_SIZE=30

# ==============================================
# FILE STORAGE
# ==============================================
# Local storage path
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=100mb
ALLOWED_FILE_TYPES=mp4,mkv,avi,ts,m3u8

# Cloud storage (optional)
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ==============================================
# EXTERNAL API KEYS
# ==============================================
# TMDB for metadata (optional)
TMDB_API_KEY=

# Email service (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@dragonshield.local

# ==============================================
# MONITORING & LOGGING
# ==============================================
LOG_LEVEL=info
LOG_FILE=./logs/dragon-shield.log
ENABLE_METRICS=true
METRICS_PORT=9090

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Only used in development
DEV_MODE=false
HOT_RELOAD=true
DEBUG_MODE=false

# ==============================================
# LOAD BALANCING & CLUSTERING
# ==============================================
# Server configuration
SERVER_ID=dragon-shield-01
SERVER_REGION=us-east-1
LOAD_BALANCER_ENABLED=false
CLUSTER_NODES=

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d
BACKUP_PATH=./backups

# ==============================================
# SECURITY SETTINGS
# ==============================================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=